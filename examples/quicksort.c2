/* main.c */

int divide(int *v, int p, int r){
  int pivot;
  pivot = v[r];
  int i;
  i = p;
  int j;
  j = p;
  int k;
  k = p;
  int t;
  int c;

  /* separa vetor de forma que v[p..j-1] <= v[j] < v[j+1..r] */
  loop {
    break when ( k >= r);
    c = v[r];
    if (v[k] <= c) {
      /* troca elementos */
      i = v[j];
      v[j] = v[k];
      v[k] = i;
      j = j+1; 
    }
    k = k+1;
  }
  t = v[j];
  v[j] = v[r];
  v[r] = t;
  return j;
}

void quicksort (int *v, int p, int r) {
   if (p < r) {                   
      int j;
      j = divide(v, p, r);   
      quicksort (v, p, j-1);      
      quicksort (v, j+1, r);      
   }
}


